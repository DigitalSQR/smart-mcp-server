{
  "resourceType": "PlanDefinition",
  "id": "example-measles-protocol",
  "url": "http://example.org/fhir/PlanDefinition/measles-vaccination",
  "version": "1.0.0",
  "name": "MeaslesVaccinationProtocol",
  "title": "Measles Vaccination Protocol",
  "status": "active",
  "description": "A simple protocol for administering measles vaccinations according to age-based schedule.",
  "goal": [
    {
      "description": {
        "text": "Complete measles vaccination series"
      }
    }
  ],
  "action": [
    {
      "title": "MCV Dose 1",
      "description": "Administer first dose of measles-containing vaccine",
      "code": [
        {
          "coding": [
            {
              "system": "http://hl7.org/fhir/sid/cvx",
              "code": "05",
              "display": "Measles"
            }
          ],
          "text": "Measles vaccine dose 1"
        }
      ],
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/fhirpath",
            "expression": "Patient.birthDate <= today() - 9 months"
          }
        }
      ],
      "timingAge": {
        "value": 9,
        "unit": "months",
        "system": "http://unitsofmeasure.org",
        "code": "mo"
      }
    },
    {
      "title": "MCV Dose 2",
      "description": "Administer second dose of measles-containing vaccine",
      "code": [
        {
          "coding": [
            {
              "system": "http://hl7.org/fhir/sid/cvx",
              "code": "05",
              "display": "Measles"
            }
          ],
          "text": "Measles vaccine dose 2"
        }
      ],
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/fhirpath",
            "expression": "Patient.birthDate <= today() - 15 months"
          }
        }
      ],
      "timingAge": {
        "value": 15,
        "unit": "months",
        "system": "http://unitsofmeasure.org",
        "code": "mo"
      }
    }
  ]
}
